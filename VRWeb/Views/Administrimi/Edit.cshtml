@model VRWeb.Models.ApplicationUser
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="registerbody">
    <div class="blur"></div>
    <h2 class="text-center">@ViewBag.Title</h2>
    <h2 class="text-center">Change Your Profile Name, Email or Birthday</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="text-center">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "col-md-12 control-label text-center" })
            <div class="text-center" style="margin-left: 33%;">
                <div class="mob">
                    @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control col-md-6 textalign" } })
                    @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        @*<div class="text-center" style="color: red"> @ViewBag.message</div>*@ 
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-12 control-label text-center" })
            <div class="text-center" style="margin-left: 33%;">
                <div class="mob">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-md-6 textalign" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Datelindja, htmlAttributes: new { @class = "col-md-12 control-label text-center" })
            <div class="text-center" style="margin-left: 33%;">
                <div class="mob">
                    @Html.EditorFor(model => model.Datelindja, new { htmlAttributes = new { @class = "form-control col-md-6 textalign" } })
                    @Html.ValidationMessageFor(model => model.Datelindja, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12 text-center">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
                <br />
                <div style="margin-top: 1%">
                    @Html.ActionLink("Back to List", "Index", "", new { @class = "kot1 hover" })
                </div>
            </div>
        </div>


    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}