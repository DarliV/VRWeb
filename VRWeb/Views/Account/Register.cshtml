@model VRWeb.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="registerbody">
    <h2 class="text-center">@ViewBag.Title</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4 class="text-center">Create a new account</h4>
        <hr style="width:80vw; margin: 20px auto;" />
        <div class="text-center">
            @Html.ValidationSummary("", new { @class = "text-danger font-weight-bold" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FullName, new { @class = "col-md-12 control-label text-center" })
            <div class="text-center" style="margin-left: 33%;">
                <div class="mob">
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control col-md-6" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-12 control-label text-center" })
            <div class="text-center" style="margin-left: 33%;">
                <div class="mob">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-md-6" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-12 control-label text-center" })
            <div class="text-center" style="margin-left: 33%;">
                <div class="mob">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-6" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label text-center" })
            <div class="text-center" style="margin-left: 33%;">
                <div class="mob">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-md-6" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Datelindja, new { @class = "col-md-12 control-label text-center" })
            <div class="text-center">
                <div class="text-center" style="margin-left: 33%;">
                    <div class="mob">
                        @Html.TextBoxFor(m => m.Datelindja, new { @class = "form-control col-md-6" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-12 text-center">
                <input type="submit" class="btn btn-danger" value="Register" />
            </div>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>